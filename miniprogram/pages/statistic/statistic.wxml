          <view class="horizontal_line_tail_transparent" style="width:{{Page_Width*3/4}}px"></view>
        </view>
        <view class="horizontal_line" style="margin-top:{{Page_Height*3/80+5}}px">
          <view class="horizontal_line_head" style="width:5px"></view>
          <view class="horizontal_line_tail_solid" style="width:{{Page_Width*3/4}}px"></view>
        </view>
        
      </view>

      <view class="vertical">
        <view class="vertical_line" style="margin-left:34px">
          <view class="vertical_line_head_solid" style="height:{{Page_Height*3/20+45}}px"></view>
          <view class="vertical_line_tail" style="height:5px"></view>
