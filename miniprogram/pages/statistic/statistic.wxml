        <text class="vertical_number" style="width:{{Page_Width*3/44}}px">8</text>
        <text class="vertical_number" style="width:{{Page_Width*3/44}}px">9</text>
        <text class="vertical_number" style="width:{{Page_Width*3/44}}px">10</text>
        <text class="vertical_number" style="width:{{Page_Width*3/44}}px">11</text>
        <text class="vertical_number" style="width:{{Page_Width*3/44}}px">12</text>
      </view>

    </view>
  </view>
</view>